<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="400"
            stylesheets="@style.css">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Unit Converter" style="-fx-text-fill: #2b2b2b;">
                <font>
                    <Font name="Arial Rounded MT Bold" size="36"/>
                </font>
            </Label>
            <Button text="Start" fx:id="startButton"
                    style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;"
                    onAction="#handleStart"/>
        </VBox>
    </center>
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
</BorderPane>

